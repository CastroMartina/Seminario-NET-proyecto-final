@page "/"
@inject NavigationManager navManager
@rendermode InteractiveServer

<PageTitle>CentroEventos</PageTitle>

<h1>Bienvenido al sistema de gestión de eventos</h1>

<button class="btn btn-primary" @onclick="IniciarSesion">Iniciar Sesión</button>
<button class="btn btn-primary" @onclick="Registrarse">Registrarse</button>

@code {
    private void IniciarSesion()
    {
        navManager.NavigateTo($"/login");
    }

    private void Registrarse()
    {
        navManager.NavigateTo($"/signup");
    }
}